function zan(a,t,d){var e='<span class="zan_ani" id="zan_'+a.data("id")+'" >+1</span>';$.ajax({url:t,type:"POST",dataType:"json",data:{id:a.data("id")},success:function(t){switch(t.code){case-1:document.location.href="/login?url="+document.location.href;break;default:1==d?a.text(parseInt(a.text())+1).css("cursor","default"):a.css("cursor","default").text("已赞"),$("body").append(e),$("#zan_"+a.data("id")).css({top:a.offset().top-20,left:a.offset().left+a.width()/2-$("#zan_"+a.data("id")).width()/2}).animate({top:"-=50",opacity:0},500,function(){a.data("zan","1"),$("#zan_"+a.data("id")).remove()})}}})}