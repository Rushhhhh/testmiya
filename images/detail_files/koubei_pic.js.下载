window.onload=function(){function e(e){return e.pageX||e.pageY?{x:e.pageX,y:e.pageY}:{x:e.clientX+document.documentElement.scrollLeft-document.documentElement.clientLeft,y:e.clientY+document.documentElement.scrollTop-document.documentElement.clientTop}}var t=document.getElementById("big");if(null!=t){var i,l=t.getElementsByTagName("div")[0];$(".kb_pic").mouseover(function(){var e=this;i=setTimeout(function(){t.style.display=l.style.display="block";var i=document.createElement("img"),n=new Image;n.src=i.src=$(e).attr("src").replace("_small.jpg","_big.jpg"),n.onload=function(){n.width>=n.height?n.width>400?(i.style.width="400px",i.style.height=Math.ceil(400/n.width*n.height)+"px"):(i.style.width=n.width+"px",i.style.height=n.height+"px"):n.height>400?(i.style.width=Math.ceil(400/n.height*n.width)+"px",i.style.height="400px"):(i.style.width=n.width+"px",i.style.height=n.height+"px"),t.appendChild(i),$(e).addClass("active"),n.complete?l.style.display="none":i.onload=function(){l.style.display="none"}}},300)})}$(".kb_pic").mouseout(function(){clearTimeout(i),"block"==t.style.display&&($(this).removeClass("active"),t.style.display="none",$("#big").html("<div style='display:none;'></div>"))}),$(".kb_pic").mousemove(function(i){var i=i||window.event,l=document.documentElement.offsetWidth-i.clientX;t.style.top=e(i).y+20+"px",t.style.left=(l<t.offsetWidth+10?i.clientX-t.offsetWidth-10:i.clientX+10)+"px"})},$(".change_pic").mouseover(function(){$(".small img").removeClass("select_small_img"),$(this).addClass("select_small_img");var e=document.createElement("img");e.src=$(this).attr("src"),e.style.width="400px",e.style.height="400px",$(".big").html(e)});